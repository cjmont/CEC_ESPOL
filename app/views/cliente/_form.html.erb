<%= form_for @order do |f| %>
<%= render 'shared/msg' %>
<div class="container">
	<div class="col-md-10">
		<h3>Datos Personales</h3>
	</div>
	<div class="form-group">
		<div class="col-md-10">
			<%= f.label :Nombre %>
			<%= f.text_field :name, size: 40, class: 'form-control' %>
		</div>
	</div>	
	<div class="form-group">
		<div class="col-md-10">
			<%= f.label :'Correo electronico'  %>
			<%= f.email_field :email, size: 40, class: 'form-control' %>
		</div>
	</div>	
	<div class="form-group">
		<div class="col-md-10">
			<%= f.label :Direccion %>
			<%= f.text_area :address, cols: 40, class: 'form-control' %>
		</div>
	</div>	
	<div class="form-group">
		<div class="col-md-10">
			<%= f.label :telefono  %>
			<%= f.text_field :telefono, size: 40, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-10">
			<%= f.label :Ciudad %>
			<%= f.text_field :city, size: 40, class: 'form-control' %>
		</div>
	</div>	
	<div class="form-group">
		<div class="col-md-10">
			<%= f.label :Pais  %>
			<%= f.text_field :country, size: 40, class: 'form-control' %>
		</div>
	</div>	
	<div class="form-group">
		<div class="col-md-10">
			<%= f.submit 'Finalizar' %>
		</div>
	</div>	
</div>
<% end %>
